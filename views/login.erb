
<div class="back">
  <div>
    <br>
    <br>
    <form id="login" method="post" action="/check">
      <label>
        <b>User Name</b>
      </label>
      <input type="text" name="user" id="Uname" placeholder="Username">
      <br><br>
      <label>
        <b>Password&nbsp;&nbsp;</b>
      </label>
      <input type="Password" name="password" id="Pass" placeholder="Password">
      <br><br>
      &nbsp<button class="btn">Login</button>
<!--        <p>Back to <a href="/home"><span> home </span></a></p>-->
<!--        <p>Go to <a href="/signup"><span> signup </span></a></p>-->
      <% if params and params[:err]%>
        <% if params[:err] == "1" %>
          <p id="error">Username and Password are not matched</p>
          <% else %>
          <p id="error">Please login first</p>
        <%end %>
      <% end %>
    </form>
  </div>
</div>